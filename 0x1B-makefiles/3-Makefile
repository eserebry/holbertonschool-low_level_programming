#include <m.h>

NAME = holberton

CC = gcc

CFLAGS = -Wall -Werror -Wextra -pedantic

SRC = main.c holberton.c

OBJ = $(SRC:.c=.o)

HEADER = m.h

RM = rm -rf

all: $(OBJ)
	$(CC) -o $(NAME) $(OBJ) $(CFLAGS)

clean: /bin/$(RM) *~ $(NAME)

oclean: /bin/$(RM) $(OBJ)

fclean: clean
	oclean

re: fclean all

.PHONY: clean
